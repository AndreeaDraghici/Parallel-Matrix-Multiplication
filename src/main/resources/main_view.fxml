<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ace.ucv.MatrixMultiplicationView">
    <!-- Top Menu -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Exit" onAction="#exitApplication"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Center Tab Pane -->
    <center>
        <TabPane fx:id="tabPane">
            <!-- Output Tab -->
            <Tab text="Output" fx:id="outputTab" closable="false">
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                    <Label text="Matrix Multiplication Output"/>
                    <TextArea fx:id="outputArea" editable="false" wrapText="true"/>
                </VBox>
            </Tab>

            <!-- Save Options Tab -->
            <Tab text="Save" fx:id="saveTab" closable="false">
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                    <Label text="Save Options"/>
                    <Button text="Save Output to Text File" onAction="#saveOutputToFile"/>
                    <Button text="Save Performance Metrics to Excel" onAction="#savePerformanceMetrics"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Bottom Input Area -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Rows Min:"/>
                <TextField fx:id="rowsMinField"/>
                <Label text="Rows Max:"/>
                <TextField fx:id="rowsMaxField"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Cols Min:"/>
                <TextField fx:id="colsMinField"/>
                <Label text="Cols Max:"/>
                <TextField fx:id="colsMaxField"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Method:"/>
                <VBox spacing="5">
                    <RadioButton fx:id="classicSequentialButton" text="Sequential"/>
                    <RadioButton fx:id="parallelButton" text="Parallel"/>
                    <RadioButton fx:id="strassenButton" text="Strassen"/>
                </VBox>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Start Multiplication" onAction="#startMultiplication"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
