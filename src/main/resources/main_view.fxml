<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ace.ucv.MatrixMultiplicationView" spacing="10" alignment="TOP_CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- GridPane for Input Fields -->
    <GridPane hgap="10" vgap="10">
        <Label text="Rows Min:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="rowsMinField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Rows Max:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="rowsMaxField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Cols Min:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="colsMinField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Cols Max:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="colsMaxField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Radio Buttons for Method Selection -->
    <HBox spacing="10">
        <RadioButton fx:id="sequentialButton" text="Sequential"/>
        <RadioButton fx:id="parallelButton" text="Parallel"/>
    </HBox>

    <!-- Start Button -->
    <Button text="Start Multiplication" onAction="#startMultiplication"/>

    <!-- Output TextArea -->
    <TextArea fx:id="outputArea" editable="false" wrapText="true" prefHeight="500"/>
</VBox>
